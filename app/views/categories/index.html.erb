<h1 class="center">Listing all categories</h1>
<%= will_paginate %>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 offset-md-4">
          <li class="article-title center">
            <%= link_to  "#{category.name}", category_path(category) %>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
<% will_paginate %>